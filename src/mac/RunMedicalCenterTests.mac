 //   Set test = SuiteName _ ":" _ ClassName

   // Write "--- Starting Unit Tests for: "_ClassName_" ---", !

    //Do ##class(%UnitTest.Manager).RunTest(test, quals)
    
    Write "--- Test run finished ---", !
    
    Quit

macRunMedicalCenterTests ;